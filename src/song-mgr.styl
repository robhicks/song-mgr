:host {
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: white;
  border: 1px solid #ccc;
  font-family: sans-serif;
}

h2 {
  font-size: 1.5em;
  font-weight: 400;
  color: #333;
  font-style: italic;
}

nav {
  display: flex;
  height: 42px;
  align-items: center;
  background-color: rgb(234, 234, 234);
  button {
    display: flex;
    flex: 1;
    border: 0;
    background: transparent;
    font-size: 1.1em;
    padding: 0 12px;
    height: inherit;
    color: rgb(48, 138, 215);
    cursor: pointer;
    outline: none;
    &.active {
      background-color: white;
      color: #333;
    }
  }
}

section {
  display: flex;
  flex: 1;
  flex-direction: column;
  overflow-x: hidden;
  overflow-y: auto;
  padding: 12px;
  &#tracks {
    .track {
      display: flex;
      min-height: 248px;
      padding: 12px;
      &:nth-child(even) {
        background: #efefef;
      }
      .left, .right {
        display: flex;
        flex-direction: column;
      }
      .left {
        flex: .75;
      }
      .right {
        flex: .25;
      }
    }
