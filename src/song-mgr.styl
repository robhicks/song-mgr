}

.likes {
  margin-top: 16px;
  button {
    display: inline-flex;
    background: transparent;
    border: 0;
    outline: none;
    align-items: center;
    cursor: pointer;
    img {
      height: 16px;
      width: 16px;
      margin-right: 12px;
    }
  }
}

.hidden {
